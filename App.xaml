<?xml version="1.0" encoding="utf-8" ?>
<Application
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.App">

    <Application.Resources>

        <!-- ========================== -->
        <!-- COLORS -->
        <!-- ========================== -->

        <Color x:Key="PrimaryColor">#2563EB</Color>
        <Color x:Key="SuccessColor">#16A34A</Color>
        <Color x:Key="DangerColor">#DC2626</Color>
        <Color x:Key="WarningColor">#F59E0B</Color>
        <Color x:Key="BackgroundColor">#F5F6FA</Color>
        <Color x:Key="CardColor">#FFFFFF</Color>
        <Color x:Key="TextPrimary">#1E293B</Color>
        <Color x:Key="TextSecondary">#64748B</Color>

        <!-- ========================== -->
        <!-- STYLES -->
        <!-- ========================== -->

        <Style TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="HeightRequest" Value="52" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style TargetType="Entry">
            <Setter Property="HeightRequest" Value="48" />
            <Setter Property="BackgroundColor" Value="#F9FAFB" />
            <Setter Property="TextColor" Value="#111827" />
            <Setter Property="PlaceholderColor" Value="#9CA3AF" />
        </Style>

        <Style TargetType="Picker">
            <Setter Property="HeightRequest" Value="48" />
            <Setter Property="BackgroundColor" Value="#F9FAFB" />
        </Style>

        <Style TargetType="Frame">
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="HasShadow" Value="True" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="BackgroundColor" Value="{StaticResource CardColor}" />
        </Style>

    </Application.Resources>
</Application>
