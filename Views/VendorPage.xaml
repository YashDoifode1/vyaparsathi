<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.VendorPage"
    Title="Add Vendor"
    BackgroundColor="#EEF2F7">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Vendor Form Card -->
            <Frame BackgroundColor="White"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="True">
                <VerticalStackLayout Spacing="14">

                    <!-- Vendor Name -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Vendor Name"
                               FontAttributes="Bold"
                               TextColor="#1E293B"/>
                        <Entry x:Name="NameEntry"
                               Placeholder="Enter vendor name"
                               HeightRequest="48"
                               BackgroundColor="#F8FAFC"/>
                    </VerticalStackLayout>

                    <!-- Contact Person -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Contact Person"
                               FontAttributes="Bold"
                               TextColor="#1E293B"/>
                        <Entry x:Name="ContactPersonEntry"
                               Placeholder="Contact person name"
                               HeightRequest="48"
                               BackgroundColor="#F8FAFC"/>
                    </VerticalStackLayout>

                    <!-- Phone -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Phone"
                               FontAttributes="Bold"
                               TextColor="#1E293B"/>
                        <Entry x:Name="PhoneEntry"
                               Placeholder="Phone number"
                               Keyboard="Telephone"
                               HeightRequest="48"
                               BackgroundColor="#F8FAFC"/>
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Email"
                               FontAttributes="Bold"
                               TextColor="#1E293B"/>
                        <Entry x:Name="EmailEntry"
                               Placeholder="Email"
                               Keyboard="Email"
                               HeightRequest="48"
                               BackgroundColor="#F8FAFC"/>
                    </VerticalStackLayout>

                    <!-- Address -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Address"
                               FontAttributes="Bold"
                               TextColor="#1E293B"/>
                        <Editor x:Name="AddressEditor"
                                Placeholder="Enter address"
                                HeightRequest="80"
                                BackgroundColor="#F8FAFC"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Frame>

            <!-- Save Button -->
            <Button Text="Save Vendor"
                    HeightRequest="54"
                    CornerRadius="16"
                    FontAttributes="Bold"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    Clicked="OnSaveVendorClicked"/>

            <!-- Vendor List -->
            <Frame BackgroundColor="White"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Vendors"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="#1E293B"/>

                    <CollectionView x:Name="VendorCollectionView"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Text="{Binding Name}"
                                           FontAttributes="Bold"
                                           TextColor="#0F172A"/>

                                    <Button Text="Delete"
                                            Grid.Column="1"
                                            BackgroundColor="#F87171"
                                            TextColor="White"
                                            CornerRadius="12"
                                            CommandParameter="{Binding .}"
                                            Clicked="OnDeleteVendorClicked"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
