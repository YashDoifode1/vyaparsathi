<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    x:Class="vyaparsathi.Views.BillingHistoryPage"
    Title="Billing History"
    BackgroundColor="#F5F6FA">

    <VerticalStackLayout Padding="20" Spacing="16">

        <!-- Header -->
        <VerticalStackLayout Spacing="4">
            <Label Text="Billing History"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#1E293B"/>
            <Label Text="Search and filter past bills"
                   FontSize="14"
                   TextColor="#64748B"/>
        </VerticalStackLayout>

        <!-- Search by Name -->
        <SearchBar x:Name="CustomerSearchBar"
                   Placeholder="Search by customer name"
                   TextChanged="OnSearchChanged"/>

        <!-- Date Filter -->
        <HorizontalStackLayout Spacing="8">
            <DatePicker x:Name="StartDatePicker" />
            <DatePicker x:Name="EndDatePicker" />
            <Button Text="Filter"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    CornerRadius="12"
                    Clicked="OnFilterClicked"/>
        </HorizontalStackLayout>

        <!-- Bills List -->
        <CollectionView x:Name="BillsCollection"
                        SelectionMode="Single"
                        SelectionChanged="OnBillSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="12"
                           Padding="12"
                           BackgroundColor="White"
                           HasShadow="True"
                           Margin="0,4">
                        <HorizontalStackLayout Spacing="12">
                            <VerticalStackLayout>
                                <Label Text="{Binding CustomerName}"
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Text="{Binding Date, StringFormat='Date: {0:dd/MM/yyyy}'}"
                                       FontSize="12"
                                       TextColor="#64748B"/>
                            </VerticalStackLayout>

                            <Label Text="{Binding TotalAmount, StringFormat='â‚¹{0:F2}'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
