<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.CustomersPage"
    Title="Customers"
    BackgroundColor="#F3F4F6">

    <VerticalStackLayout Padding="16" Spacing="14">

        <!-- HEADER -->
        <VerticalStackLayout>
            <Label Text="Customers"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#0F172A"/>
            <Label Text="Customer Management"
                   FontSize="13"
                   TextColor="#64748B"/>
        </VerticalStackLayout>

        <!-- SEARCH + ADD -->
        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">

            <!-- SEARCH -->
            <Frame Grid.Column="0"
                   CornerRadius="14"
                   BackgroundColor="White"
                   Padding="10"
                   HasShadow="False">

                <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                    <Image Source="search.png"
                           WidthRequest="18"
                           HeightRequest="18"
                           Margin="4,0"/>

                    <Entry Grid.Column="1"
                           x:Name="SearchEntry"
                           Placeholder="Search here..."
                           TextColor="#0F172A"
                           PlaceholderColor="#94A3B8"
                           TextChanged="OnSearchTextChanged"/>
                </Grid>
            </Frame>

            <!-- ADD -->
            <Button Grid.Column="1"
                    Text="+ Add"
                    HeightRequest="44"
                    Padding="16,0"
                    CornerRadius="14"
                    FontAttributes="Bold"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    Clicked="OnAddCustomerClicked"/>
        </Grid>

        <!-- CUSTOMERS LIST -->
        <CollectionView x:Name="CustomersCollection"
                        SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <Frame CornerRadius="16"
                           BackgroundColor="White"
                           Padding="14"
                           Margin="0,6"
                           HasShadow="True">

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}},
                                                  Path=BindingContext.OpenCustomerCommand}"
                                CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>

                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">

                            <!-- INFO -->
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Name}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#0F172A"/>

                                <Label Text="{Binding PhoneNumber}"
                                       FontSize="13"
                                       TextColor="#64748B"/>

                                <!-- STATUS PILL -->
                                <Frame Padding="6,2"
                                       CornerRadius="10"
                                       BackgroundColor="{Binding StatusColor}"
                                       HorizontalOptions="Start">
                                    <Label Text="{Binding DueStatus}"
                                           FontSize="11"
                                           TextColor="White"/>
                                </Frame>
                            </VerticalStackLayout>

                            <!-- AMOUNT -->
                            <VerticalStackLayout Grid.Column="1"
                                                 VerticalOptions="Center"
                                                 HorizontalOptions="End">
                                <Label Text="{Binding DueAmount, StringFormat='â‚¹{0:N0}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{Binding AmountColor}"/>

                                <Label Text="{Binding DueLabel}"
                                       FontSize="12"
                                       TextColor="{Binding AmountColor}"
                                       HorizontalTextAlignment="End"/>
                            </VerticalStackLayout>

                        </Grid>
                    </Frame>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
