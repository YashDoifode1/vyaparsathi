<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.UdharPage"
    Title="Udhar"
    BackgroundColor="#F5F6FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Udhar / Credit Entry"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#1E293B"/>

                <Label Text="Record credit given to a customer"
                       FontSize="14"
                       TextColor="#64748B"/>
            </VerticalStackLayout>

            <!-- Udhar Form Card -->
            <Frame CornerRadius="16"
                   BackgroundColor="White"
                   Padding="16"
                   HasShadow="True">

                <VerticalStackLayout Spacing="14">

                    <!-- Customer Name -->
                    <Label Text="Customer Name"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#1E293B"/>

                    <Entry Placeholder="Enter customer name"
                           HeightRequest="48"
                           BackgroundColor="#F9FAFB"
                           ClearButtonVisibility="WhileEditing"/>

                    <!-- Amount -->
                    <Label Text="Amount (â‚¹)"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#1E293B"/>

                    <Entry Placeholder="Enter udhar amount"
                           Keyboard="Numeric"
                           HeightRequest="48"
                           BackgroundColor="#F9FAFB"/>

                    <!-- Notes -->
                    <Label Text="Notes (optional)"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#1E293B"/>

                    <Editor Placeholder="e.g. Due date, reason, partial payment"
                            AutoSize="TextChanges"
                            HeightRequest="80"
                            BackgroundColor="#F9FAFB"/>

                </VerticalStackLayout>
            </Frame>

            <!-- Save Button -->
            <Button Text="ðŸ’° Save Udhar"
                    BackgroundColor="#DC2626"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="14"
                    HeightRequest="52"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
