<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.UdharPage"
    Title="Udhar"
    BackgroundColor="#F5F6FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Udhar / Credit Entry"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#1E293B"/>
                <Label Text="Record credit given to a customer"
                       FontSize="14"
                       TextColor="#64748B"/>
            </VerticalStackLayout>

            <!-- Udhar Form Card -->
            <Frame CornerRadius="16" BackgroundColor="White" Padding="16" HasShadow="True">
                <VerticalStackLayout Spacing="14">

                    <!-- Customer Picker -->
                    <Label Text="Customer" FontSize="14" FontAttributes="Bold" TextColor="#1E293B"/>
                    <Picker x:Name="CustomerPicker" Title="Select Customer" HeightRequest="48"/>

                    <!-- Amount -->
                    <Label Text="Amount (â‚¹)" FontSize="14" FontAttributes="Bold" TextColor="#1E293B"/>
                    <Entry x:Name="AmountEntry" Placeholder="Enter udhar amount" Keyboard="Numeric" HeightRequest="48" BackgroundColor="#F9FAFB"/>

                    <!-- Notes -->
                    <Label Text="Notes (optional)" FontSize="14" FontAttributes="Bold" TextColor="#1E293B"/>
                    <Editor x:Name="NotesEditor" Placeholder="e.g. Due date, reason" AutoSize="TextChanges" HeightRequest="80" BackgroundColor="#F9FAFB"/>

                </VerticalStackLayout>
            </Frame>

            <!-- Save Button -->
            <Button Text="ðŸ’° Save Udhar"
                    BackgroundColor="#DC2626"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="14"
                    HeightRequest="52"
                    Clicked="OnSaveUdharClicked"/>

            <!-- Udhar List -->
            <Label Text="Udhar History" FontSize="16" FontAttributes="Bold" TextColor="#1E293B"/>
            <CollectionView x:Name="UdharCollection" HeightRequest="300">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="12" Padding="12" BackgroundColor="White" HasShadow="True" Margin="0,4">
                            <HorizontalStackLayout Spacing="10">
                                <VerticalStackLayout>
                                    <Label Text="{Binding CustomerName}" FontAttributes="Bold"/>
                                    <Label Text="{Binding Amount, StringFormat='â‚¹{0:F2}'}" FontSize="12" TextColor="#64748B"/>
                                    <Label Text="{Binding Notes}" FontSize="12" TextColor="#64748B"/>
                                    <Label Text="{Binding Date, StringFormat='Date: {0:dd/MM/yyyy}'}" FontSize="12" TextColor="#64748B"/>
                                </VerticalStackLayout>
                                <Button Text="âŒ" BackgroundColor="#EF4444" TextColor="White" CornerRadius="12" HorizontalOptions="EndAndExpand" Clicked="OnDeleteUdharClicked" CommandParameter="{Binding .}"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
