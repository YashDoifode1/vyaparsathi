<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.UdharHistoryPage"
    Title="Udhar History"
    BackgroundColor="#F5F6FA">

    <VerticalStackLayout Padding="16" Spacing="16">

        <!-- Header -->
        <Label Text="Udhar History"
               FontSize="26"
               FontAttributes="Bold"
               TextColor="#1E293B"/>

        <!-- Search -->
        <Entry x:Name="SearchEntry"
               Placeholder="Search customer..."
               HeightRequest="46"
               BackgroundColor="White"
               ClearButtonVisibility="WhileEditing"
               TextChanged="OnSearchTextChanged"/>

        <!-- Udhar List -->
        <CollectionView x:Name="UdharCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="14"
                           Padding="14"
                           Margin="0,6"
                           BackgroundColor="White"
                           HasShadow="True">

                        <VerticalStackLayout Spacing="6">

                            <Label Text="{Binding CustomerName}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="#1E293B"/>

                            <Label Text="{Binding Amount, StringFormat='â‚¹{0:F2}'}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#DC2626"/>

                            <Label Text="{Binding Notes}"
                                   FontSize="13"
                                   TextColor="#64748B"/>

                            <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy}'}"
                                   FontSize="12"
                                   TextColor="#94A3B8"/>

                            <Button Text="Mark as Paid"
                                    BackgroundColor="#16A34A"
                                    TextColor="White"
                                    CornerRadius="10"
                                    IsVisible="{Binding IsPaid, Converter={StaticResource InverseBoolConverter}}"
                                    Clicked="OnMarkPaidClicked"/>
                        </VerticalStackLayout>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
