<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    x:Class="vyaparsathi.Views.BillingPage"
    Title="Billing"
    BackgroundColor="#F5F6FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Create Bill" FontSize="26" FontAttributes="Bold" TextColor="#1E293B"/>
                <Label Text="Generate a new bill for your customer" FontSize="14" TextColor="#64748B"/>
            </VerticalStackLayout>

            <!-- Customer Details -->
            <Frame CornerRadius="16" BackgroundColor="White" Padding="16" HasShadow="True">
                <VerticalStackLayout Spacing="12">

                    <Label Text="Select Customer" FontSize="14" FontAttributes="Bold"/>
                    <Picker x:Name="CustomerPicker"
                            Title="Choose existing customer"
                            HeightRequest="48"
                            BackgroundColor="#F9FAFB"
                            SelectedIndexChanged="OnCustomerSelected"/>

                    <Label Text="Or Enter Customer Name" FontSize="14" FontAttributes="Bold"/>
                    <Entry x:Name="CustomerNameEntry"
                           Placeholder="Enter customer name"
                           HeightRequest="48"
                           BackgroundColor="#F9FAFB"/>

                    <HorizontalStackLayout Spacing="10">
                        <CheckBox x:Name="UdharCheckBox"/>
                        <Label Text="Mark as Udhar" VerticalTextAlignment="Center"/>
                    </HorizontalStackLayout>

                    <Label Text="Date" FontSize="14" FontAttributes="Bold"/>
                    <DatePicker x:Name="BillDatePicker"
                                Date="{x:Static sys:DateTime.Now}"
                                BackgroundColor="#F9FAFB"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Add Items -->
            <Frame CornerRadius="16" BackgroundColor="White" Padding="16" HasShadow="True">
                <VerticalStackLayout Spacing="12">

                    <Label Text="Add Items" FontSize="16" FontAttributes="Bold"/>

                    <Picker x:Name="CategoryPicker"
                            Title="Select Category"
                            SelectedIndexChanged="OnCategoryChanged"/>

                    <Picker x:Name="ItemPicker"
                            Title="Select Item"
                            SelectedIndexChanged="OnItemChanged"/>

                    <HorizontalStackLayout Spacing="8">
                        <Entry x:Name="QuantityEntry" Placeholder="Qty" Keyboard="Numeric" WidthRequest="60"/>
                        <Entry x:Name="PriceEntry" Placeholder="Price" Keyboard="Numeric" WidthRequest="80"/>
                        <Button Text="âž•" Clicked="OnAddItemClicked"/>
                    </HorizontalStackLayout>

                    <CollectionView x:Name="BillItemsCollection" HeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{Binding ItemName}" WidthRequest="120"/>
                                    <Label Text="{Binding Quantity}" WidthRequest="40"/>
                                    <Label Text="{Binding Price, StringFormat='â‚¹{0:F2}'}"/>
                                    <Label Text="{Binding Total, StringFormat='â‚¹{0:F2}'}"/>
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Label x:Name="TotalLabel"
                           Text="Total: â‚¹0.00"
                           FontAttributes="Bold"
                           HorizontalOptions="End"/>

                    <HorizontalStackLayout Spacing="12">
                        <Button Text="ðŸ§¾ Save Bill"
            BackgroundColor="#16A34A"
            TextColor="White"
            CornerRadius="14"
            HeightRequest="48"
            Clicked="OnSaveBillClicked"/>

                        <Button Text="ðŸ–¨ Print"
            BackgroundColor="#2563EB"
            TextColor="White"
            CornerRadius="14"
            HeightRequest="48"
            Clicked="OnPrintClicked"/>

                        <Button Text="ðŸ“¤ Share"
            BackgroundColor="#F59E0B"
            TextColor="White"
            CornerRadius="14"
            HeightRequest="48"
            Clicked="OnShareClicked"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
