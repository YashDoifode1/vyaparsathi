<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.BillingPage"
    Title="Billing"
    BackgroundColor="#F5F6FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Create Bill"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#1E293B"/>

                <Label Text="Generate a new bill for your customer"
                       FontSize="14"
                       TextColor="#64748B"/>
            </VerticalStackLayout>

            <!-- Customer Details -->
            <Frame CornerRadius="16"
                   BackgroundColor="White"
                   Padding="16"
                   HasShadow="True">

                <VerticalStackLayout Spacing="14">

                    <Label Text="Customer Details"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#1E293B"/>

                    <Label Text="Customer Name"
                           FontSize="14"
                           FontAttributes="Bold"/>

                    <Entry Placeholder="Enter customer name"
                           HeightRequest="48"
                           BackgroundColor="#F9FAFB"
                           ClearButtonVisibility="WhileEditing"/>

                </VerticalStackLayout>
            </Frame>

            <!-- Billing Details -->
            <Frame CornerRadius="16"
                   BackgroundColor="White"
                   Padding="16"
                   HasShadow="True">

                <VerticalStackLayout Spacing="14">

                    <Label Text="Billing Details"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#1E293B"/>

                    <Label Text="Item Name"
                           FontSize="14"
                           FontAttributes="Bold"/>

                    <Entry Placeholder="Select or enter item"
                           HeightRequest="48"
                           BackgroundColor="#F9FAFB"/>

                    <Label Text="Amount (â‚¹)"
                           FontSize="14"
                           FontAttributes="Bold"/>

                    <Entry Placeholder="Enter amount"
                           Keyboard="Numeric"
                           HeightRequest="48"
                           BackgroundColor="#F9FAFB"/>

                </VerticalStackLayout>
            </Frame>

            <!-- Save Button -->
            <Button Text="ðŸ§¾ Save Bill"
                    BackgroundColor="#16A34A"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="14"
                    HeightRequest="52"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
