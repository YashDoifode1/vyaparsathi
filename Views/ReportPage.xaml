<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.ReportPage"
    Title="Reports"
    BackgroundColor="#F3F4F6">

    <ScrollView>
        <VerticalStackLayout Padding="18" Spacing="18">

            <!-- Header -->
            <VerticalStackLayout Spacing="2">
                <Label Text="Profit &amp; Sales Report"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#0F172A" />
                <Label Text="Track business performance"
                       FontSize="13"
                       TextColor="#64748B" />
            </VerticalStackLayout>

            <!-- Filters -->
            <Frame BackgroundColor="White"
                   CornerRadius="16"
                   Padding="14"
                   HasShadow="True">

                <VerticalStackLayout Spacing="10">
                    <!-- Customer Picker -->
                    <Picker x:Name="CustomerPicker"
                            Title="Select Customer"
                            SelectedIndexChanged="OnFilterChanged"/>

                    <Grid ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <DatePicker x:Name="FromDatePicker" Grid.Column="0"/>
                        <DatePicker x:Name="ToDatePicker" Grid.Column="1"/>
                    </Grid>

                    <Button Text="Apply"
                            HeightRequest="42"
                            CornerRadius="12"
                            FontAttributes="Bold"
                            BackgroundColor="#2563EB"
                            TextColor="White"
                            Clicked="OnApplyFilterClicked"/>
                </VerticalStackLayout>
            </Frame>

            <!-- KPI Cards -->
            <Grid ColumnSpacing="14" RowSpacing="14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Profit -->
                <Frame Grid.Row="0" Grid.Column="0"
                       CornerRadius="16"
                       BackgroundColor="White"
                       Padding="16">
                    <VerticalStackLayout>
                        <Label Text="Total Profit" FontSize="12" TextColor="#6B7280"/>
                        <Label x:Name="ProfitLabel"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#16A34A"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Total Sales -->
                <Frame Grid.Row="0" Grid.Column="1"
                       CornerRadius="16"
                       BackgroundColor="White"
                       Padding="16">
                    <VerticalStackLayout>
                        <Label Text="Total Sales" FontSize="12" TextColor="#6B7280"/>
                        <Label x:Name="TotalSalesLabel"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#2563EB"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Total Purchases -->
                <Frame Grid.Row="1" Grid.Column="0"
                       CornerRadius="16"
                       BackgroundColor="White"
                       Padding="16">
                    <VerticalStackLayout>
                        <Label Text="Total Purchases" FontSize="12" TextColor="#6B7280"/>
                        <Label x:Name="PurchaseCostLabel"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#F97316"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Total Udhar -->
                <Frame Grid.Row="1" Grid.Column="1"
                       CornerRadius="16"
                       BackgroundColor="White"
                       Padding="16">
                    <VerticalStackLayout>
                        <Label Text="Total Udhar" FontSize="12" TextColor="#6B7280"/>
                        <Label x:Name="UdharLabel"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#16A34A"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
