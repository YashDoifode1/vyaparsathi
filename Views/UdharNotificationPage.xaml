<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.UdharNotificationPage"
    Title="Udhar Notification"
    BackgroundColor="#F8FAFC">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Header -->
        <Label Text="Send Udhar Reminder"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="#1F2937"/>

        <!-- Customer Picker -->
        <Picker x:Name="CustomerPicker"
                Title="Select Customer"/>

        <!-- Message Editor -->
        <Editor x:Name="MessageEditor"
                Placeholder="Enter message..."
                AutoSize="TextChanges"
                HeightRequest="120"
                BackgroundColor="White"
                TextColor="#111827"/>

        <!-- Send Button -->
        <Button Text="Send SMS"
                BackgroundColor="#2563EB"
                TextColor="White"
                FontAttributes="Bold"
                HeightRequest="50"
                CornerRadius="12"
                Clicked="OnSendSmsClicked"/>

        <!-- Status -->
        <Label x:Name="StatusLabel"
               Text=""
               FontSize="14"
               TextColor="#DC2626"/>

    </VerticalStackLayout>
</ContentPage>
