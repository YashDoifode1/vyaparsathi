<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.UdharNotificationPage"
    Title="Udhar Notification"
    BackgroundColor="#F8FAFC">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Header -->
        <VerticalStackLayout Spacing="4">
            <Label Text="Send Udhar Reminder"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#0F172A"/>

            <Label Text="Send payment reminder to customers"
                   FontSize="14"
                   TextColor="#64748B"/>
        </VerticalStackLayout>

        <!-- Customer Picker -->
        <Picker x:Name="CustomerPicker"
                Title="Select Customer"
                BackgroundColor="White"/>

        <!-- Message -->
        <Editor x:Name="MessageEditor"
                Placeholder="Enter reminder message..."
                AutoSize="TextChanges"
                HeightRequest="120"
                BackgroundColor="White"
                TextColor="#111827"/>

        <!-- Send Button -->
        <Button Text="Send SMS Reminder"
                BackgroundColor="#2563EB"
                TextColor="White"
                FontAttributes="Bold"
                HeightRequest="52"
                CornerRadius="16"
                Clicked="OnSendSmsClicked"/>

        <!-- Status -->
        <Label x:Name="StatusLabel"
               FontSize="14"
               TextColor="#DC2626"/>

    </VerticalStackLayout>
</ContentPage>
