<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.SettingsPage"
    Title="Settings"
    BackgroundColor="#F8FAFC">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="24">

            <!-- Page Header -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Settings"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#0F172A"/>

                <Label Text="Manage your business preferences"
                       FontSize="14"
                       TextColor="#64748B"/>
            </VerticalStackLayout>

            <!-- Business Profile -->
            <Frame BackgroundColor="White"
                   CornerRadius="18"
                   Padding="18"
                   HasShadow="True">

                <VerticalStackLayout Spacing="16">

                    <Label Text="Business Profile"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#0F172A"/>

                    <Entry x:Name="BusinessNameEntry"
                           Placeholder="Business name"
                           HeightRequest="50"
                           BackgroundColor="#F1F5F9"/>

                    <Entry x:Name="OwnerNameEntry"
                           Placeholder="Owner name"
                           HeightRequest="50"
                           BackgroundColor="#F1F5F9"/>

                    <Entry x:Name="PhoneEntry"
                           Placeholder="Phone number"
                           Keyboard="Telephone"
                           HeightRequest="50"
                           BackgroundColor="#F1F5F9"/>

                    <Entry x:Name="WhatsAppEntry"
                           Placeholder="WhatsApp number"
                           Keyboard="Telephone"
                           HeightRequest="50"
                           BackgroundColor="#F1F5F9"/>

                    <Button Text="Save Profile"
                            HeightRequest="52"
                            CornerRadius="16"
                            FontAttributes="Bold"
                            BackgroundColor="#2563EB"
                            TextColor="White"
                            Clicked="OnSaveProfileClicked"/>
                </VerticalStackLayout>
            </Frame>

            <!-- App Actions -->
            <Frame BackgroundColor="White"
                   CornerRadius="18"
                   Padding="8"
                   HasShadow="True">

                <VerticalStackLayout>

                    <!-- Add Category -->
                    <Grid Padding="14" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <VerticalStackLayout Spacing="2">
                            <Label Text="Add Category"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#0F172A"/>
                            <Label Text="Create and manage product categories"
                                   FontSize="13"
                                   TextColor="#64748B"/>
                        </VerticalStackLayout>

                        <Label Text="›"
                               Grid.Column="1"
                               FontSize="22"
                               TextColor="#94A3B8"
                               VerticalOptions="Center"/>

                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAddCategoryTapped"/>
                        </Grid.GestureRecognizers>
                    </Grid>

                    <BoxView HeightRequest="1" BackgroundColor="#E5E7EB"/>

                    <!-- Add Item -->
                    <Grid Padding="14" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <VerticalStackLayout Spacing="2">
                            <Label Text="Add Item"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#0F172A"/>
                            <Label Text="Add products to inventory"
                                   FontSize="13"
                                   TextColor="#64748B"/>
                        </VerticalStackLayout>

                        <Label Text="›"
                               Grid.Column="1"
                               FontSize="22"
                               TextColor="#94A3B8"
                               VerticalOptions="Center"/>

                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAddItemTapped"/>
                        </Grid.GestureRecognizers>
                    </Grid>

                    <BoxView HeightRequest="1" BackgroundColor="#E5E7EB"/>

                    <!-- WhatsApp -->
                    <Grid Padding="14" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <VerticalStackLayout Spacing="2">
                            <Label Text="Send WhatsApp Message"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#0F172A"/>
                            <Label Text="Message customers or suppliers"
                                   FontSize="13"
                                   TextColor="#64748B"/>
                        </VerticalStackLayout>

                        <Label Text="›"
                               Grid.Column="1"
                               FontSize="22"
                               TextColor="#94A3B8"
                               VerticalOptions="Center"/>

                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSendWhatsAppTapped"/>
                        </Grid.GestureRecognizers>
                    </Grid>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
