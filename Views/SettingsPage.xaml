<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.SettingsPage"
    Title="Settings"
    BackgroundColor="#F3F4F6">

    <ScrollView>
        <VerticalStackLayout Spacing="20">

            <!-- HEADER 
            <Grid BackgroundColor="#2563EB" Padding="20">
                <VerticalStackLayout>
                    <Label Text="Settings"
       FontSize="26"
       FontAttributes="Bold"
       TextColor="White"/>

                    <Label Text="Business &amp; system configuration"
       FontSize="14"
       TextColor="#DBEAFE"/>

                </VerticalStackLayout>
            </Grid>-->

            <!-- CONTENT -->
            <VerticalStackLayout Padding="20" Spacing="18">

                <!-- BUSINESS PROFILE -->
                <Frame BackgroundColor="White" CornerRadius="18" Padding="18">
                    <VerticalStackLayout Spacing="14">

                        <Label Text="Business Profile"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#0F172A"/>

                        <Entry x:Name="BusinessNameEntry"
                               Placeholder="Business Name"
                               HeightRequest="50"
                               BackgroundColor="#F1F5F9"/>

                        <Entry x:Name="OwnerNameEntry"
                               Placeholder="Owner Name"
                               HeightRequest="50"
                               BackgroundColor="#F1F5F9"/>

                        <Entry x:Name="PhoneEntry"
                               Placeholder="Phone Number"
                               Keyboard="Telephone"
                               HeightRequest="50"
                               BackgroundColor="#F1F5F9"/>
                        <Entry x:Name="WhatsAppEntry"
               Placeholder="WhatsApp number"
               Keyboard="Telephone"
               HeightRequest="50"
               BackgroundColor="#F1F5F9"/>
                        <Button Text="Save Profile"
                                HeightRequest="52"
                                CornerRadius="16"
                                FontAttributes="Bold"
                                BackgroundColor="#2563EB"
                                TextColor="White"
                                Clicked="OnSaveProfileClicked"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- SMS SETTINGS -->
                <Frame BackgroundColor="White" CornerRadius="18" Padding="18">
                    <VerticalStackLayout Spacing="14">

                        <Label Text="SMS Settings"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#0F172A"/>

                        <Entry x:Name="ApiKeyEntry"
                               Placeholder="API Key"
                               HeightRequest="50"
                               BackgroundColor="#F1F5F9"/>

                        <Entry x:Name="SenderIdEntry"
                               Placeholder="Sender ID"
                               HeightRequest="50"
                               BackgroundColor="#F1F5F9"/>

                        <Entry x:Name="SmsUrlEntry"
                               Placeholder="SMS URL"
                               HeightRequest="50"
                               BackgroundColor="#F1F5F9"/>

                        <Button Text="Save SMS Settings"
                                HeightRequest="52"
                                CornerRadius="16"
                                FontAttributes="Bold"
                                BackgroundColor="#2563EB"
                                TextColor="White"
                                Clicked="OnSaveSmsSettingsClicked"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- DANGER ZONE -->
                <Frame BackgroundColor="#FEF2F2"
                       CornerRadius="18"
                       Padding="18">
                    <VerticalStackLayout Spacing="12">

                        <Label Text="Danger Zone"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#991B1B"/>

                        <Label Text="Resetting database will permanently delete all data."
                               FontSize="13"
                               TextColor="#7F1D1D"/>

                        <Button Text="Reset Database"
                                HeightRequest="52"
                                CornerRadius="16"
                                FontAttributes="Bold"
                                BackgroundColor="#DC2626"
                                TextColor="White"
                                Clicked="OnResetDatabaseClicked"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
