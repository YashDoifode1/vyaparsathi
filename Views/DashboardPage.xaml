<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.DashboardPage"
    BackgroundColor="#F3F4F6"
    Title="VyaparSathi">

    <ScrollView>
        <VerticalStackLayout Spacing="20">

            <!-- HEADER 
            <Grid BackgroundColor="#2563EB" Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <VerticalStackLayout>
                    <Label Text="VyaparSathi"
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Welcome back ðŸ‘‹"
                           FontSize="14"
                           TextColor="#DBEAFE"/>
                </VerticalStackLayout>
            </Grid>-->

            <!-- CONTENT -->
            <VerticalStackLayout Padding="20" Spacing="18">

                <!-- KPI GRID -->
                <Grid ColumnSpacing="14" RowSpacing="14">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- TOTAL UDHAR -->
                    <Frame CornerRadius="16"
       BackgroundColor="#FEF2F2"
       Padding="16">
                        <VerticalStackLayout>
                            <Label Text="Total Udhar"
               FontSize="14"
               TextColor="#991B1B"/>
                            <Label x:Name="TotalUdharLabel"
               FontSize="26"
               FontAttributes="Bold"
               TextColor="#7F1D1D"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Customers -->
                    <Frame CornerRadius="16" BackgroundColor="#E0F2FE" Padding="16">
                        <VerticalStackLayout>
                            <Label Text="Total Customers" FontSize="12" TextColor="#0369A1"/>
                            <Label x:Name="TotalCustomersLabel"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="#0C4A6E"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Vendors -->
                    <Frame Grid.Column="1" CornerRadius="16" BackgroundColor="#FEF3C7" Padding="16">
                        <VerticalStackLayout>
                            <Label Text="Total Vendors" FontSize="12" TextColor="#92400E"/>
                            <Label x:Name="TotalVendorsLabel"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="#78350F"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Stock Value -->
                    <Frame Grid.Row="1" CornerRadius="16" BackgroundColor="#DCFCE7" Padding="16">
                        <VerticalStackLayout>
                            <Label Text="Stock Value" FontSize="12" TextColor="#166534"/>
                            <Label x:Name="StockValueLabel"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="#14532D"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Today Sales -->
                    <Frame Grid.Row="1" Grid.Column="1" CornerRadius="16" BackgroundColor="#FEE2E2" Padding="16">
                        <VerticalStackLayout>
                            <Label Text="Today's Sales" FontSize="12" TextColor="#991B1B"/>
                            <Label x:Name="TodaySalesLabel"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="#7F1D1D"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- NET PROFIT (HIGHLIGHT CARD) -->
                <Frame CornerRadius="18"
                       BackgroundColor="#ECFDF5"
                       Padding="20">
                    <VerticalStackLayout>
                        <Label Text="Net Profit"
                               FontSize="14"
                               TextColor="#065F46"/>
                        <Label x:Name="TotalProfitLabel"
                               FontSize="30"
                               FontAttributes="Bold"
                               TextColor="#047857"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- ACTION BUTTONS -->
                <Button Text="Create Bill"
                        BackgroundColor="#2563EB"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="16"
                        HeightRequest="52"
                        Clicked="OnCreateBillClicked"/>

                <Button Text="Manage Stock"
                        BackgroundColor="#E5E7EB"
                        TextColor="#111827"
                        FontAttributes="Bold"
                        CornerRadius="16"
                        HeightRequest="52"
                        Clicked="OnStockClicked"/>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
