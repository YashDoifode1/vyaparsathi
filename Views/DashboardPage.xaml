<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.DashboardPage"
    Title="Dashboard"
    BackgroundColor="#F3F4F6">

    <!-- ONLY ONE ROOT -->
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="22">

            <!-- Header -->
            <VerticalStackLayout Spacing="4">
                <Label Text="VyaparSathi"
                       FontSize="30"
                       FontAttributes="Bold"
                       TextColor="#111827"/>
                <Label Text="Business Overview"
                       FontSize="14"
                       TextColor="#6B7280"/>
            </VerticalStackLayout>

            <!-- KPI GRID -->
            <Grid ColumnSpacing="14" RowSpacing="14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Today Sales -->
                <Frame BackgroundColor="White" CornerRadius="18" Padding="16">
                    <VerticalStackLayout>
                        <Label Text="Today's Sales" FontSize="12" TextColor="#6B7280"/>
                        <Label x:Name="TodaySalesLabel"
                               Text="₹0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#16A34A"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Total Profit -->
                <Frame Grid.Column="1" BackgroundColor="White" CornerRadius="18" Padding="16">
                    <VerticalStackLayout>
                        <Label Text="Total Profit" FontSize="12" TextColor="#6B7280"/>
                        <Label x:Name="TotalProfitLabel"
                               Text="₹0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#2563EB"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Stock Value -->
                <Frame Grid.Row="1" BackgroundColor="White" CornerRadius="18" Padding="16">
                    <VerticalStackLayout>
                        <Label Text="Total Stock Value" FontSize="12" TextColor="#6B7280"/>
                        <Label x:Name="StockValueLabel"
                               Text="₹0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#F59E0B"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Udhar -->
                <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="White" CornerRadius="18" Padding="16">
                    <VerticalStackLayout>
                        <Label Text="Total Udhar" FontSize="12" TextColor="#6B7280"/>
                        <Label x:Name="TotalUdharLabel"
                               Text="₹0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#DC2626"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Customers -->
                <Frame Grid.Row="2" BackgroundColor="White" CornerRadius="18" Padding="16">
                    <VerticalStackLayout>
                        <Label Text="Total Customers" FontSize="12" TextColor="#6B7280"/>
                        <Label x:Name="TotalCustomersLabel"
                               Text="0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#0F172A"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Vendors -->
                <Frame Grid.Row="2" Grid.Column="1" BackgroundColor="White" CornerRadius="18" Padding="16">
                    <VerticalStackLayout>
                        <Label Text="Total Vendors" FontSize="12" TextColor="#6B7280"/>
                        <Label x:Name="TotalVendorsLabel"
                               Text="0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#0F172A"/>
                    </VerticalStackLayout>
                </Frame>

            </Grid>

            <!-- ACTIONS -->
            <Button Text="Create New Bill"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="16"
                    HeightRequest="52"
                    Clicked="OnCreateBillClicked"/>

            <Button Text="Manage Stock"
                    BackgroundColor="#E5E7EB"
                    TextColor="#111827"
                    FontAttributes="Bold"
                    CornerRadius="16"
                    HeightRequest="52"
                    Clicked="OnStockClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
