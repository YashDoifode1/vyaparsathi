<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.DashboardPage"
    Title="Dashboard"
    BackgroundColor="#F5F6FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout Spacing="4">
                <Label Text="VyaparSathi"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#1E293B"/>

                <Label Text="Business Overview"
                       FontSize="14"
                       TextColor="#64748B"/>
            </VerticalStackLayout>

            <!-- Stats Cards -->
            <Grid ColumnSpacing="12" RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Today's Sales -->
                <Frame Grid.Row="0" Grid.Column="0"
                       CornerRadius="16"
                       BackgroundColor="White"
                       Padding="16"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Today's Sales"
                               FontSize="13"
                               TextColor="#64748B"/>
                        <Label Text="â‚¹0"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#16A34A"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Total Udhar -->
                <Frame Grid.Row="0" Grid.Column="1"
                       CornerRadius="16"
                       BackgroundColor="White"
                       Padding="16"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Total Udhar"
                               FontSize="13"
                               TextColor="#64748B"/>
                        <Label Text="â‚¹0"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#DC2626"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Low Stock -->
                <Frame Grid.Row="1" Grid.ColumnSpan="2"
                       CornerRadius="16"
                       BackgroundColor="White"
                       Padding="16"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Low Stock Items"
                               FontSize="13"
                               TextColor="#64748B"/>
                        <Label Text="0 Items"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#F59E0B"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Actions -->
            <VerticalStackLayout Spacing="12">

                <Button Text="âž• Create New Bill"
                        BackgroundColor="#2563EB"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="14"
                        HeightRequest="50"/>

                <Button Text="ðŸ“¦ View Stock"
                        BackgroundColor="#E5E7EB"
                        TextColor="#1E293B"
                        FontAttributes="Bold"
                        CornerRadius="14"
                        HeightRequest="50"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
