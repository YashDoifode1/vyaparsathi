<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.DashboardPage"
    Title="Dashboard"
    BackgroundColor="#F5F6FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="22">

            <!-- Header -->
            <VerticalStackLayout Spacing="2">
                <Label Text="VyaparSathi"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#111827"/>

                <Label Text="Business Overview"
                       FontSize="14"
                       TextColor="#6B7280"/>
            </VerticalStackLayout>

            <!-- KPI Cards -->
            <Grid ColumnSpacing="14" RowSpacing="14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Today's Sales -->
                <Frame Grid.Row="0" Grid.Column="0"
                       CornerRadius="16"
                       BackgroundColor="White"
                       Padding="16"
                       HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Today's Sales"
                               FontSize="13"
                               TextColor="#6B7280"/>
                        <Label x:Name="TodaySalesLabel"
                               Text="â‚¹0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#16A34A"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Total Udhar -->
                <Frame Grid.Row="0" Grid.Column="1"
                       CornerRadius="16"
                       BackgroundColor="White"
                       Padding="16"
                       HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Total Udhar"
                               FontSize="13"
                               TextColor="#6B7280"/>
                        <Label x:Name="TotalUdharLabel"
                               Text="â‚¹0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#DC2626"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Low Stock -->
                <Frame Grid.Row="1" Grid.Column="0"
                       CornerRadius="16"
                       BackgroundColor="White"
                       Padding="16"
                       HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Low Stock Items"
                               FontSize="13"
                               TextColor="#6B7280"/>
                        <Label x:Name="LowStockLabel"
                               Text="0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#F59E0B"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Total Products -->
                <Frame Grid.Row="1" Grid.Column="1"
                       CornerRadius="16"
                       BackgroundColor="White"
                       Padding="16"
                       HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Total Products"
                               FontSize="13"
                               TextColor="#6B7280"/>
                        <Label x:Name="TotalProductsLabel"
                               Text="0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#2563EB"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Quick Actions -->
            <VerticalStackLayout Spacing="14">

                <Button Text="âž• Create New Bill"
                        BackgroundColor="#2563EB"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="14"
                        HeightRequest="52"
                        Clicked="OnCreateBillClicked"/>

                <Button Text="ðŸ“¦ Manage Stock"
                        BackgroundColor="#E5E7EB"
                        TextColor="#111827"
                        FontAttributes="Bold"
                        CornerRadius="14"
                        HeightRequest="52"
                        Clicked="OnStockClicked"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
