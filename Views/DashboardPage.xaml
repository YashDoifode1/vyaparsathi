<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.DashboardPage"
    Title="Dashboard"
    BackgroundColor="#F3F4F6">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="26">

            <!-- Header -->
            <VerticalStackLayout Spacing="4">
                <Label Text="VyaparSathi"
                       FontSize="30"
                       FontAttributes="Bold"
                       TextColor="#111827"/>

                <Label Text="Business Overview"
                       FontSize="14"
                       TextColor="#6B7280"/>
            </VerticalStackLayout>

            <!-- KPI Section -->
            <Label Text="Today at a Glance"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#111827"/>

            <Grid ColumnSpacing="16" RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Card Template -->
                <!-- Today's Sales -->
                <Frame Grid.Row="0" Grid.Column="0"
                       CornerRadius="18"
                       BackgroundColor="White"
                       Padding="18"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Today's Sales"
                               FontSize="13"
                               TextColor="#6B7280"/>
                        <Label x:Name="TodaySalesLabel"
                               Text="₹0"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="#16A34A"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Total Udhar -->
                <Frame Grid.Row="0" Grid.Column="1"
                       CornerRadius="18"
                       BackgroundColor="White"
                       Padding="18"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Total Udhar"
                               FontSize="13"
                               TextColor="#6B7280"/>
                        <Label x:Name="TotalUdharLabel"
                               Text="₹0"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="#DC2626"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Low Stock -->
                <Frame Grid.Row="1" Grid.Column="0"
                       CornerRadius="18"
                       BackgroundColor="White"
                       Padding="18"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Low Stock Items"
                               FontSize="13"
                               TextColor="#6B7280"/>
                        <Label x:Name="LowStockLabel"
                               Text="0"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="#F59E0B"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Total Products -->
                <Frame Grid.Row="1" Grid.Column="1"
                       CornerRadius="18"
                       BackgroundColor="White"
                       Padding="18"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Total Products"
                               FontSize="13"
                               TextColor="#6B7280"/>
                        <Label x:Name="TotalProductsLabel"
                               Text="0"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="#2563EB"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Actions -->
            <Label Text="Quick Actions"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#111827"/>

            <VerticalStackLayout Spacing="14">

                <!-- Primary Action -->
                <Button Text="Create New Bill"
                        BackgroundColor="#2563EB"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="16"
                        HeightRequest="54"
                        Clicked="OnCreateBillClicked"/>

                <!-- Secondary Action -->
                <Button Text="Manage Stock"
                        BackgroundColor="#E5E7EB"
                        TextColor="#111827"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="16"
                        HeightRequest="54"
                        Clicked="OnStockClicked"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
