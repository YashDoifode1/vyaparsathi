<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.StockPage"
    Title="Stock"
    BackgroundColor="#F5F6FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout>
                <Label Text="Stock Management"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#1E293B"/>
                <Label Text="Update inventory stock"
                       FontSize="14"
                       TextColor="#64748B"/>
            </VerticalStackLayout>

            <!-- Stock Card -->
            <Frame CornerRadius="16"
                   BackgroundColor="White"
                   Padding="16"
                   HasShadow="True">

                <VerticalStackLayout Spacing="14">

                    <!-- Category -->
                    <Label Text="Category" FontAttributes="Bold"/>
                    <Picker x:Name="CategoryPicker"
                            Title="Select Category"
                            SelectedIndexChanged="OnCategoryChanged"/>

                    <!-- Item -->
                    <Label Text="Item" FontAttributes="Bold"/>
                    <Picker x:Name="ItemPicker"
                            Title="Select Item"
                            SelectedIndexChanged="OnItemChanged"/>

                    <!-- Selling Price -->
                    <Label Text="Selling Price (â‚¹)" FontAttributes="Bold"/>
                    <Entry x:Name="PriceEntry"
                           IsReadOnly="True"
                           BackgroundColor="#F1F5F9"/>

                    <!-- Stock -->
                    <Label Text="Add / Update Stock" FontAttributes="Bold"/>
                    <Entry x:Name="StockEntry"
                           Placeholder="Enter quantity"
                           Keyboard="Numeric"
                           BackgroundColor="#F9FAFB"/>

                </VerticalStackLayout>
            </Frame>

            <!-- Save Button -->
            <Button Text="ðŸ“¦ Save Stock"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="14"
                    HeightRequest="52"
                    Clicked="OnSaveStockClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
