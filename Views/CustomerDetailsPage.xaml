<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.CustomerDetailsPage"
    Title="Udhar History"
    BackgroundColor="#F3F4F6">

    <VerticalStackLayout Padding="16" Spacing="12">

        <Label x:Name="CustomerNameLabel"
               FontSize="22"
               FontAttributes="Bold"
               TextColor="#0F172A"/>

        <CollectionView x:Name="UdharCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="14"
                           BackgroundColor="White"
                           Padding="14"
                           Margin="0,6">

                        <Grid ColumnDefinitions="*,Auto">

                            <VerticalStackLayout>
                                <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy}'}"
                                       FontSize="12"
                                       TextColor="#64748B"/>

                                <Label Text="{Binding Amount, StringFormat='â‚¹{0:N0}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"/>
                            </VerticalStackLayout>

                            <Frame Grid.Column="1"
                                   Padding="6,2"
                                   CornerRadius="10"
                                   BackgroundColor="{Binding StatusColor}"
                                   VerticalOptions="Center">
                                <Label Text="{Binding Status}"
                                       FontSize="11"
                                       TextColor="White"/>
                            </Frame>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
