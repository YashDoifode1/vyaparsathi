<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.StartupPage"
    BackgroundColor="#2563EB"
    Shell.NavBarIsVisible="False">

    <Grid>
        <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="20">

            <Label Text="VyaparSathi"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>

            <Label Text="Loading your business..."
                   FontSize="14"
                   TextColor="#E5E7EB"
                   HorizontalTextAlignment="Center"/>

            <ActivityIndicator
                IsRunning="True"
                Color="White"
                HeightRequest="40"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
