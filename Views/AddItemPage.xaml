<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vyaparsathi.Views.AddItemPage"
    Title="Add Item"
    BackgroundColor="#F5F6FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout>
                <Label Text="Add / Edit Item"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#1E293B"/>
                <Label Text="Manage your inventory items"
                       FontSize="14"
                       TextColor="#64748B"/>
            </VerticalStackLayout>

            <!-- Form Card -->
            <Frame CornerRadius="16"
                   BackgroundColor="White"
                   Padding="16"
                   HasShadow="True">

                <VerticalStackLayout Spacing="14">

                    <!-- Category -->
                    <Label Text="Category" FontAttributes="Bold"/>
                    <Picker x:Name="CategoryPicker"
                            Title="Select Category"
                            HeightRequest="48"
                            BackgroundColor="#F9FAFB"/>

                    <!-- Item Name -->
                    <Label Text="Item Name" FontAttributes="Bold"/>
                    <Entry x:Name="NameEntry"
                           Placeholder="Enter item name"
                           HeightRequest="48"
                           BackgroundColor="#F9FAFB"/>

                    <!-- Selling Price -->
                    <Label Text="Selling Price (â‚¹)" FontAttributes="Bold"/>
                    <Entry x:Name="PriceEntry"
                           Placeholder="Enter selling price"
                           Keyboard="Numeric"
                           HeightRequest="48"
                           BackgroundColor="#F9FAFB"/>

                    <!-- Stock -->
                    <Label Text="Stock Quantity" FontAttributes="Bold"/>
                    <Entry x:Name="StockEntry"
                           Placeholder="Enter stock quantity"
                           Keyboard="Numeric"
                           HeightRequest="48"
                           BackgroundColor="#F9FAFB"/>

                </VerticalStackLayout>
            </Frame>

            <!-- Save Button -->
            <Button Text="ðŸ’¾ Save Item"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="14"
                    HeightRequest="52"
                    Clicked="OnSaveClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
