<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:system="clr-namespace:System;assembly=netstandard"
    x:Class="vyaparsathi.Views.PurchasePage"
    Title="Purchase"
    BackgroundColor="#F3F4F6">

    <ScrollView>
        <VerticalStackLayout Spacing="20">

            

            <!-- CONTENT -->
            <VerticalStackLayout Padding="20" Spacing="18">

                <!-- VENDOR -->
                <Frame BackgroundColor="White"
                       CornerRadius="18"
                       Padding="18">
                    <VerticalStackLayout Spacing="14">
                        <Label Text="Vendor"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#0F172A"/>

                        <Picker x:Name="VendorPicker"
                                Title="Select Vendor"
                                HeightRequest="50"
                                BackgroundColor="#F1F5F9"
                                SelectedIndexChanged="OnVendorSelected"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- PURCHASE ITEMS -->
                <Frame BackgroundColor="White"
                       CornerRadius="18"
                       Padding="18">
                    <VerticalStackLayout Spacing="14">

                        <Label Text="Items"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#0F172A"/>

                        <Picker x:Name="CategoryPicker"
                                Title="Select Category"
                                SelectedIndexChanged="OnCategoryChanged"/>

                        <Picker x:Name="ItemPicker"
                                Title="Select Item"
                                SelectedIndexChanged="OnItemChanged"/>

                        <!-- ADD ITEM ROW -->
                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Entry x:Name="QuantityEntry"
                                   Placeholder="Qty"
                                   Keyboard="Numeric"
                                   WidthRequest="70"
                                   BackgroundColor="#F1F5F9"/>

                            <Entry x:Name="PriceEntry"
                                   Placeholder="Price"
                                   Keyboard="Numeric"
                                   WidthRequest="100"
                                   BackgroundColor="#F1F5F9"
                                   Grid.Column="1"/>

                            <Button Text="Add"
                                    Grid.Column="2"
                                    HeightRequest="48"
                                    CornerRadius="12"
                                    FontAttributes="Bold"
                                    BackgroundColor="#2563EB"
                                    TextColor="White"
                                    Clicked="OnAddPurchaseItemClicked"/>
                        </Grid>

                        <!-- ITEMS LIST -->
                        <CollectionView x:Name="PurchaseItemsCollection"
                                        HeightRequest="220"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="6" ColumnSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Text="{Binding Name}"
                                               FontAttributes="Bold"/>

                                        <Label Text="{Binding Quantity}"
                                               Grid.Column="1"/>

                                        <Label Text="{Binding Total, StringFormat='₹{0:F2}'}"
                                               Grid.Column="2"
                                               FontAttributes="Bold"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- TAX / EXTRA CHARGES -->
                        <Frame BackgroundColor="#F3F4F6" CornerRadius="14" Padding="10">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Extra Charges / Taxes" FontAttributes="Bold"/>
                                <Entry x:Name="TransportEntry" Placeholder="Transport ₹" Keyboard="Numeric"/>
                                <Entry x:Name="TaxEntry" Placeholder="Tax ₹" Keyboard="Numeric"/>
                                <Entry x:Name="OtherChargesEntry" Placeholder="Other ₹" Keyboard="Numeric"/>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- GRAND TOTAL -->
                        <Frame BackgroundColor="#ECFDF5"
                               CornerRadius="14"
                               Padding="14">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="Grand Total"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#065F46"/>
                                <Label x:Name="TotalLabel"
                                       Text="₹0.00"
                                       Grid.Column="1"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#047857"/>
                            </Grid>
                        </Frame>

                        <!-- PURCHASE DATE -->
                        <DatePicker x:Name="PurchaseDatePicker"
                                    Date="{x:Static system:DateTime.Now}"
                                    BackgroundColor="#F1F5F9"/>

                    </VerticalStackLayout>
                </Frame>

                <!-- SAVE -->
                <Button Text="Save Purchase"
                        HeightRequest="54"
                        CornerRadius="16"
                        FontAttributes="Bold"
                        BackgroundColor="#16A34A"
                        TextColor="White"
                        Clicked="OnSavePurchaseClicked"/>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
