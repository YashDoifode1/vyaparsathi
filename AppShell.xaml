<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:vyaparsathi.Views"
       x:Class="vyaparsathi.AppShell">

    <!-- Flyout Menu -->
    <FlyoutItem Title="Dashboard" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Settings" Icon="settings.png">
        <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Add Category" Icon="category.png">
        <ShellContent ContentTemplate="{DataTemplate views:AddCategoryPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Add Item" Icon="additem.png">
        <ShellContent ContentTemplate="{DataTemplate views:AddItemPage}" />
    </FlyoutItem>

    <!-- Bottom Tabs -->
    <TabBar>
        <Tab Title="Dashboard" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" />
        </Tab>
        <Tab Title="Billing" Icon="billing.png">
            <ShellContent ContentTemplate="{DataTemplate views:BillingPage}" />
        </Tab>
        <Tab Title="Udhar" Icon="udhar.png">
            <ShellContent ContentTemplate="{DataTemplate views:UdharPage}" />
        </Tab>
        <Tab Title="Stock" Icon="stock.png">
            <ShellContent ContentTemplate="{DataTemplate views:StockPage}" />
        </Tab>
    </TabBar>

</Shell>
