<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="vyaparsathi.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:vyaparsathi.Views"
    FlyoutBehavior="Flyout"
    BackgroundColor="White">

    <!-- ===================== -->
    <!-- HIDDEN STARTUP PAGE -->
    <!-- ===================== -->
    <ShellContent
        Route="startup"
        ContentTemplate="{DataTemplate views:StartupPage}"
        IsVisible="False" />

    <!-- ===================== -->
    <!-- FLYOUT HEADER -->
    <!-- ===================== -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#2563EB" Padding="20">
            <VerticalStackLayout Spacing="6">
                <Label Text="VyaparSathi"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Label Text="Manage your business efficiently"
                       FontSize="13"
                       TextColor="#E5E7EB"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- ===================== -->
    <!-- DASHBOARD -->
    <!-- ===================== -->
    <FlyoutItem Title="Dashboard" Icon="dashboard.png">
        <ShellContent Route="dashboard"
                      ContentTemplate="{DataTemplate views:DashboardPage}" />
    </FlyoutItem>

    <!-- ===================== -->
    <!-- BILLING -->
    <!-- ===================== -->
    <FlyoutItem Title="Billing" Icon="billing.png">
        <Tab Title="Create Bill">
            <ShellContent ContentTemplate="{DataTemplate views:BillingPage}" />
        </Tab>
        <Tab Title="Billing History">
            <ShellContent ContentTemplate="{DataTemplate views:BillingHistoryPage}" />
        </Tab>
    </FlyoutItem>

    <!-- ===================== -->
    <!-- PURCHASE -->
    <FlyoutItem Title="Purchase" Icon="purchase.png">
        <Tab Title="New Purchase">
            <ShellContent ContentTemplate="{DataTemplate views:PurchasePage}" />
        </Tab>
        <Tab Title="Purchase History">
            <ShellContent ContentTemplate="{DataTemplate views:PurchaseHistoryPage}" />
        </Tab>
    </FlyoutItem>

    <!-- ===================== -->
    <!-- VENDORS -->
    <!-- ===================== -->
    <FlyoutItem Title="Vendors" Icon="vendors.png">
        <Tab Title="Vendors">
            <ShellContent ContentTemplate="{DataTemplate views:VendorPage}" />
        </Tab>
    </FlyoutItem>

    <!-- ===================== -->
    <!-- STOCK -->
    <!-- ===================== -->
    <FlyoutItem Title="Stock" Icon="stock.png">
        <Tab Title="Stock Management">
            <ShellContent ContentTemplate="{DataTemplate views:StockPage}" />
        </Tab>
    </FlyoutItem>

    <!-- ===================== -->
    <!-- UDHAR -->
    <!-- ===================== -->
    <FlyoutItem Title="Udhar" Icon="udhar.png">
        <Tab Title="Dashboard">
            <ShellContent ContentTemplate="{DataTemplate views:UdharDashboardPage}" />
        </Tab>
        <Tab Title="Pending">
            <ShellContent ContentTemplate="{DataTemplate views:UdharPage}" />
        </Tab>
        <Tab Title="History">
            <ShellContent ContentTemplate="{DataTemplate views:UdharHistoryPage}" />
        </Tab>
        <Tab Title="Notification">
            <ShellContent ContentTemplate="{DataTemplate views:UdharNotificationPage}" />
        </Tab>
    </FlyoutItem>

    <!-- ===================== -->
    <!-- CUSTOMERS -->
    <!-- ===================== -->
    <FlyoutItem Title="Customers" Icon="customers.png">
        <Tab Title="Customers">
            <ShellContent ContentTemplate="{DataTemplate views:CustomersPage}" />
        </Tab>
    </FlyoutItem>

    <!-- ===================== -->
    <!-- REPORTS -->
    <!-- ===================== -->
    <FlyoutItem Title="Reports" Icon="report.png">
        <Tab Title="Sales  Profit">
            <ShellContent ContentTemplate="{DataTemplate views:ReportPage}" />
        </Tab>
    </FlyoutItem>

    <!-- ===================== -->
    <!-- SETTINGS -->
    <!-- ===================== -->
    <FlyoutItem Title="Settings" Icon="settings.png">
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
        <Tab Title="Backup Restore">
            <ShellContent ContentTemplate="{DataTemplate views:BackupRestorePage}" />
        </Tab>
    </FlyoutItem>

</Shell>
