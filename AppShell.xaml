<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:vyaparsathi.Views"
    x:Class="vyaparsathi.AppShell"
    FlyoutBehavior="Flyout">

    <!-- DASHBOARD -->
    <FlyoutItem Title="Dashboard" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" />
    </FlyoutItem>

    <!-- BILLING -->
    <FlyoutItem Title="Billing" Icon="billing.png">
        <ShellContent ContentTemplate="{DataTemplate views:BillingPage}" />
        <ShellContent Title="Billing History"
                      ContentTemplate="{DataTemplate views:BillingHistoryPage}" />
    </FlyoutItem>

    <!-- STOCK -->
    <FlyoutItem Title="Stock" Icon="stock.png">
        <ShellContent ContentTemplate="{DataTemplate views:StockPage}" />
    </FlyoutItem>

    <!-- UDHAR -->
    <FlyoutItem Title="Udhar" Icon="udhar.png">
        <ShellContent ContentTemplate="{DataTemplate views:UdharPage}" />
        <ShellContent Title="Udhar History"
                      ContentTemplate="{DataTemplate views:UdharHistoryPage}" />
    </FlyoutItem>

    <!-- CUSTOMERS -->
    <FlyoutItem Title="Customers" Icon="customers.png">
        <ShellContent ContentTemplate="{DataTemplate views:CustomersPage}" />
    </FlyoutItem>

    <!-- MASTER DATA -->
    <FlyoutItem Title="Master Data" Icon="database.png">
        <ShellContent Title="Categories"
                      ContentTemplate="{DataTemplate views:AddCategoryPage}" />
        <ShellContent Title="Items"
                      ContentTemplate="{DataTemplate views:AddItemPage}" />
    </FlyoutItem>

    <!-- SETTINGS -->
    <FlyoutItem Title="Settings" Icon="settings.png">
        <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        <ShellContent Title="Backup &amp; Restore"
                      ContentTemplate="{DataTemplate views:BackupRestorePage}" />
    </FlyoutItem>

</Shell>
