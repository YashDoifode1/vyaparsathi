<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:vyaparsathi.Views"
    x:Class="vyaparsathi.AppShell"
    FlyoutBehavior="Flyout"
    BackgroundColor="#FFFFFF">

    <!-- ===================== -->
    <!-- Flyout Header -->
    <!-- ===================== -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#2563EB" Padding="20">
            <VerticalStackLayout Spacing="6">
                <Label Text="VyaparSathi"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Label Text="Manage your business efficiently"
                       FontSize="14"
                       TextColor="White"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- ===================== -->
    <!-- DASHBOARD -->
    <!-- ===================== -->
    <FlyoutItem Title="Dashboard" Icon="home.png">
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate views:DashboardPage}" />
    </FlyoutItem>

    <!-- ===================== -->
    <!-- BILLING -->
    <!-- ===================== -->
    <FlyoutItem Title="Billing" Icon="billing.png">
        <ShellContent
            Title="Create Bill"
            ContentTemplate="{DataTemplate views:BillingPage}" />
        <ShellContent
            Title="Billing History"
            ContentTemplate="{DataTemplate views:BillingHistoryPage}" />
    </FlyoutItem>

    <!-- ===================== -->
    <!-- STOCK -->
    <!-- ===================== -->
    <FlyoutItem Title="Stock" Icon="stock.png">
        <ShellContent
            Title="Stock Management"
            ContentTemplate="{DataTemplate views:StockPage}" />
    </FlyoutItem>

    <!-- ===================== -->
    <!-- PURCHASE & VENDORS -->
    <!-- ===================== -->
    <FlyoutItem Title="Purchase" Icon="purchase.png">

        <ShellContent
            Title="New Purchase"
            ContentTemplate="{DataTemplate views:PurchasePage}" />

        <ShellContent
            Title="Purchase History"
            ContentTemplate="{DataTemplate views:PurchaseHistoryPage}" />

        <ShellContent
            Title="Vendors"
            ContentTemplate="{DataTemplate views:VendorPage}" />

    </FlyoutItem>

    <!-- ===================== -->
    <!-- UDHAR -->
    <!-- ===================== -->
    <FlyoutItem Title="Udhar"
                Icon="udhar.png"
                Route="udhar">
        <ShellContent
            Title="Add Udhar"
            Route="udhar_add"
            ContentTemplate="{DataTemplate views:UdharPage}" />
        <ShellContent
            Title="Udhar History"
            Route="udhar_history"
            ContentTemplate="{DataTemplate views:UdharHistoryPage}" />
        <ShellContent
            Title="Udhar Notification"
            Route="udhar_notification"
            ContentTemplate="{DataTemplate views:UdharNotificationPage}" />
    </FlyoutItem>

    <!-- ===================== -->
    <!-- CUSTOMERS -->
    <!-- ===================== -->
    <FlyoutItem Title="Customers" Icon="customers.png">
        <ShellContent
            Title="Customers"
            ContentTemplate="{DataTemplate views:CustomersPage}" />
    </FlyoutItem>

    <!-- ===================== -->
    <!-- MASTER DATA -->
    <!-- ===================== -->
    <FlyoutItem Title="Master Data" Icon="database.png">
        <ShellContent
            Title="Categories"
            ContentTemplate="{DataTemplate views:AddCategoryPage}" />
        <ShellContent
            Title="Items"
            ContentTemplate="{DataTemplate views:AddItemPage}" />
    </FlyoutItem>

    <!-- ===================== -->
    <!-- SETTINGS -->
    <!-- ===================== -->
    <FlyoutItem Title="Settings" Icon="settings.png">
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate views:SettingsPage}" />
        <ShellContent
            Title="Backup &amp; Restore"
            ContentTemplate="{DataTemplate views:BackupRestorePage}" />
    </FlyoutItem>
    

</Shell>
